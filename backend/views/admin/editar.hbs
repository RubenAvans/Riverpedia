<div class="container">
    <h4>Editar noticia:</h4>
    <div class="row">
        <form action="/admin/noticias/editar" method="post" enctype="multipart/form-data">
            {{#if error}}
            <div class="mb-3">
                <input type="hidden" class="form-control is-invalid" placeholder="{{message}}" name="id">
            </div>
            <div class="mb-3">
                <input type="text" class="form-control is-invalid" placeholder="{{message}}" name="titulo">
            </div>
            <div class="mb-3">
                <input type="text" class="form-control is-invalid" placeholder="{{message}}" name="subtitulo">
            </div>text
            <div class="mb-3">
                <textarea type="text" class="form-control is-invalid" id="cuerpo" name="cuerpo"
                    rows="4">{{message}}</textarea>
            </div>
            <div class="mb-3">
                <p><input type="file" class="form-control is-invalid" name="imagen" id="imagen"></p>
                <p>
                    <input type="checkbox" class="form-check-input" name="img_delete" id="img_delete" value="1">
                    <label class="form-check-label" for="flexCheckDefault"></label>Eliminar imagen actual?</label>
                    <input type="hidden" name="img_original" value="{{noticia.img_id}}">
                </p>
            </div>
            {{else}}
            <div class="mb-3">
                <input type="hidden" class="form-control" value="{{noticia.id}}" name="id">
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" value="{{noticia.titulo}}" name="titulo">
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" value="{{noticia.subtitulo}}" name="subtitulo">
            </div>text
            <div class="mb-3">
                <textarea type="text" class="form-control" id="cuerpo" name="cuerpo"
                    rows="4">{{noticia.cuerpo}}</textarea>
            </div>
            <div class="mb-3">
                <p><input type="file" class="form-control" name="imagen" id="imagen"></p>
                <p>
                    <input type="checkbox" class="form-check-input" name="img_delete" id="img_delete" value="1">
                    <label class="form-check-label" for="flexCheckDefault"></label>Eliminar imagen actual?</label>
                    <input type="hidden" name="img_original" value="{{noticia.img_id}}">
                </p>
            </div>
            {{/if}}
            <button type="submit" class="btn btn-danger">Guardar</button>
        </form>
        {{#if error}}
        <p>{{message}}</p>
        {{/if}}
    </div>
</div>


