<link rel='stylesheet' href='/stylesheets/admin.css' />
  

<div class="container">
    <h4>Nueva noticia:</h4>
    <div class="row">
        <form action="/admin/noticias/agregar" method="post" enctype="multipart/form-data">
        {{#if error}}
            <div class="mb-3">
                <input type="text" class="form-control is-invalid" id="titulo" name="titulo" placeholder="{{message}}" />
            </div>
            <div class="mb-3">
                <textarea type="text" class="form-control is-invalid" id="Subtitulo" name="subtitulo" placeholder="{{message}}" rows="2"></textarea>
            </div>
            <div class="mb-3">
                <textarea type="text" class="form-control is-invalid" id="cuerpo" name="cuerpo" placeholder="{{message}}" rows="4"></textarea>
            </div>
            <div class="mb-3">
                <input type="file" class="form-control is-invalid" id="imagen" name="imagen" />
            </div>
            {{else}}
            <div class="mb-3">
                <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Título" />
            </div>
            <div class="mb-3">
                <textarea type="text" class="form-control" id="Subtitulo" name="subtitulo" placeholder="Subtitulo" rows="2"></textarea>
            </div>
            <div class="mb-3">
                <textarea type="text" class="form-control" id="Subtitulo" name="cuerpo" placeholder="Cuerpo" rows="4"></textarea>
            </div>
            <div class="mb-3">
                <input type="file" class="form-control" id="imagen" name="imagen" />
            </div>
            {{/if}}
            <button type="submit" class="btn btn-danger">Guardar</button>
        </form>
    </div>
</div>


